<% unless comment.archived? %>
  <div id="comments">
    <div class="col">
      <div class="commenter">
        <strong>Commenter:</strong>
        <%= comment.commenter %>
      </div>

      <div class="comment-body">
        <strong>Comment:</strong>
        <%= comment.body %>
      </div>

      <% if current_user_owner_comment? comment.commenter %>
        <div class="comment-delete">
          <%= link_to "Destroy Comment", [comment.article, comment], data: {
            turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class:"btn btn-danger button-destroy-comment" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
